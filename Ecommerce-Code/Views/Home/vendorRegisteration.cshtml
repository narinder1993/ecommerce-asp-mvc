    });
});
</script>
    <script>
        function register()
        {
            var vendor = new Object();
            vendor.name = document.getElementById("name").value;
            vendor.email = document.getElementById("email").value;
            vendor.password = document.getElementById("password").value;
            vendor.contact = document.getElementById("contact").value;
            vendor.address = document.getElementById("address").value;
            vendor.state = document.getElementById("state").value;
            vendor.city = document.getElementById("city").value;
            vendor.pincode = document.getElementById("pincode").value;
            $.ajax({
                url: '/api/vendorReg',
                data: vendor,
                dataType:'JSON',
                type: 'POST',
                success: function (data)
                {
                    alert("Registration Successful!! Please Login.");
                    window.location.href = '/Home/vendor';
                }
            })
        }

    </script>
</head>
